# Auto detect text files and perform LF normalization
* text=auto

# Force LF for all text files
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.sh text eol=lf
*.cmake text eol=lf
*.cpp text eol=lf
*.h text eol=lf
*.c text eol=lf
*.hpp text eol=lf
*.cc text eol=lf
*.cxx text eol=lf
*.hxx text eol=lf
*.m text eol=lf
*.mm text eol=lf

# Windows-specific files should use CRLF
*.cmd text eol=crlf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.aseprite binary
*.zip binary
*.tar.gz binary
*.gz binary
